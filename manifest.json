{
  "manifest_version": 2,
  "name": "Shoplistry",
  "description": "Search Everywhere, Shop at Happyfresh",
  "version": "0.1",
  "browser_action": {
    "default_icon": "images/logo.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "page": "background.html"
  }
}
